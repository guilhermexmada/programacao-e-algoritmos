algoritmo "dobroetriplo"

var
dobro, triplo, numero1, numero2 : inteiro

inicio
escreva("Digite o primeiro número: ")
leia(numero1)
escreva("Agora digite o segundo número: ")
leia(numero2)
dobro <- numero1*2
triplo <- numero2*3
escreva("O dobro do número ", numero1," é ", dobro, " e o triplo do número ", numero2, " é ", triplo)

fimalgoritmo
