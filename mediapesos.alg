algoritmo "semnome"

var
peso1, peso2, peso3, media_pesos : real
inicio
escreva ("Digite o peso da primeira pessoa: ")
leia (peso1)
escreva ("Digite o peso da segunda pessoa: ")
leia (peso2)
escreva ("Digite o peso da terceira pessoa: ")
leia (peso3)
media <- (peso1 + peso2 + peso3)/3
escreva ("A média dos 3 pesos é de: ", media," kg ")

fimalgoritmo
