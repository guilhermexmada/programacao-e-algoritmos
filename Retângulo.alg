algoritmo "retÂngulo"

var
area, per, comp, larg : real
inicio
Escreva ("Digite o valor do primeiro lado do retângulo: ")
Leia (comp)
Escreva ("Digite o valor do segundo lado do retângulo: ")
Leia (larg)
area <- larg * comp
per <- (2*larg) + (2*comp)
Escreva ("O perímetro desse retângulo mede ",per," cm e a área mede ",area," cm².")
fimalgoritmo
